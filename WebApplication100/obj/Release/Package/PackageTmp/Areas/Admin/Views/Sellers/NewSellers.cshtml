

@{
    ViewBag.Title = "NewSellers";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultAdmin.cshtml";
}

<div style="height:75px"></div>
<div class="container bg-white p-2" dir="rtl">

    <h2 class="text-center p-2 border shadow ">فروشندگان جدید</h2>


    <div id="newSellerTable">
        @Html.Action("NewSellerPartial")
    </div>

</div>
@section Scripts{
    <script>
        function acceptSeller(id) {
            $('#AllModal').modal('show');
            $('#modalIcon').addClass('arrows-1_refresh-69 spin');
            $.get('/Admin/Sellers/AcceptSeller/' + id, (res) => {
                $("#newSellerTable").html(res);
            }).done(() => {
                $('#modalIcon').removeClass('arrows-1_refresh-69 spin').addClass('ui-1_check');
                $('#AllModal').modal('hide');
            })
        }
    </script>
}

