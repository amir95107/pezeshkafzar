
@{
    ViewBag.Title = "GetUsers";
}

<div style="height:75px"></div>
<div class="container bg-white p-2" dir="rtl">

    <h2 class="text-center p-2 border shadow ">همه کاربران</h2>
    <div>
        <select onchange="getUsers(this.value)">
            <option value="">همه کاربران</option>
            @{
                List<DataLayer.Roles> roles = ViewBag.Roles;
            }
            @foreach (var item in roles)
            {
                <option value="@item.RoleID">@item.RoleTitle</option>
            }
        </select>
    </div>
    <div id="usersTable">
        @Html.Action("UsersTable")
    </div>
</div>

