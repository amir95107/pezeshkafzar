@model DataLayer.Orders
@{
    ViewBag.Title = "OrderTracking";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

    <div class="main p-5">
        <div class="container">
            <div class="alert alert-success text-center">
                @Model.Users.UserName عزیز ، با تشکر از خرید شما . شما میتوانید وضعیت سفارش خود را در این صفحه پیگیری نمایید.
                <br />
                کد پیگیری: @Model.TraceCode
                <br />
                تاریخ: @Model.Date.ToString("yyyy/MM/dd")
            </div>
            <div class="row mt-2">
                <div class="col-6" id="processingOrder">
                    <div class="card">
                        <div class="card-body p-5 text-center complete">
                            سفارش در حال پردازش می باشد
                        </div>
                    </div>
                </div>
                <div class="col-6" id="submitingOrder">
                    <div class="card">
                        <div class="card-body p-5 text-center @((Model.IsSent)?"complete":"")">
                            سفارش شما ارسال شد
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

