    <script>
        (function () {
            $('#preLoader').hide();
            $('body').removeClass('freeze');
            $('.lazy').lazy();
            
        })();
        $('.shpl').on('click', () => {
            $('#preLoader').show();
        });
    </script>

    @RenderSection("Scripts", false)
