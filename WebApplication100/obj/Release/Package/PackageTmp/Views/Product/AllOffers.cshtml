@model IEnumerable<DataLayer.Products>
@{
    ViewBag.Title = "AllOffers";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="page-content mt-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 ">
                <div class="toolbox justify-content-center">
                   <header>
                       <h3 class="m-auto mb-0">تخفیف دارها</h3>
                   </header>
                </div>
                <div class="products mb-3" id="">
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-6 col-md-3 col-lg-3">
                                @Html.Partial("_product", product)
                            </div><!-- End .col-sm-6 col-lg-4 -->
                        }


                    </div><!-- End .row -->
                </div><!-- End .products -->

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link page-link-prev" href="#" aria-label="Previous" tabindex="-1" aria-disabled="true">
                                <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>قبلی
                            </a>
                        </li>
                        @if (ViewBag.PageCount > 1)
                        {

                            for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                <li><a class="page-link shpl @((ViewBag.pageId==i)?"active":"")" onclick="changePage(@i)">@i</a></li>
                            }

                        }

                        <li class="page-item-total">از @ViewBag.PageCount</li>
                        <li class="page-item">
                            <a class="page-link page-link-next" href="#" aria-label="Next">
                                بعدی <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.PageCount > 1)
{
    <div class="pagination-layer">
        <ul class="pagination">

            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                <li><a class="pagination-items shpl @((ViewBag.pageId==i)?"active":"")" onclick="changePage(@i)">@i</a></li>
            }

        </ul>
    </div>
}

<script>
    function changePage(pageId) {
        $("#pageId").val(pageId);
        $("#filterForm").submit();
    }
</script>

